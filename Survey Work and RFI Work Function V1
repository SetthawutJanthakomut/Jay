    console.log('Survey NO:', result.surveyNo);
    console.log('Assigned Team:', result.assignedTeam);
  }
  
  console.log('==========================================');
  
  SpreadsheetApp.getUi().alert(
    'Test Result',
    result.success ? '✅ Success!\n\n' + result.message : '❌ Failed!\n\n' + result.message,
    SpreadsheetApp.getUi().ButtonSet.OK
  );
}


/**
 * 🧪 Test: จองด้วยงานที่ไม่รองรับ (ควร fail)
 */
function testBookUnsupportedWork() {
  const testData = {
    requestDate: '2025-10-22',
    startTime: '14:00',
    endTime: '15:00',
    workType: 'Soil Testing',  // ⭐ ไม่มีทีมรองรับ
    description: 'Test - should fail',
    location: 'Test',
    requesterName: 'Test',
    requesterEmail: 'test@example.com'
  };
  
  console.log('========== Test Unsupported Work ==========');
  
  const result = saveSurveyWorkRequirement(testData);
  
  console.log('Success:', result.success);
  console.log('Message:', result.message);
  console.log('Expected: Should fail with "ไม่พบทีมที่รองรับงานนี้"');
  
  const isCorrect = !result.success && result.message.includes('ไม่พบทีม');
  
  console.log('\n📊 Test Result:', isCorrect ? '✅ PASS' : '❌ FAIL');
  console.log('==========================================');
  
  SpreadsheetApp.getUi().alert(
    'Test Result',
    isCorrect ? 
      '✅ PASS\n\nระบบ reject งานที่ไม่รองรับถูกต้อง' : 
      '❌ FAIL\n\n' + result.message,
    SpreadsheetApp.getUi().ButtonSet.OK
  );
}

/**
 * 🧪 Test: จองด้วยงานที่ไม่รองรับ (ควร fail)
 */
function testBookUnsupportedWork() {
  const testData = {
    requestDate: '2025-10-22',
    startTime: '14:00',
    endTime: '15:00',
    workType: 'Soil Testing',  // ⭐ ไม่มีทีมรองรับ
    description: 'Test - should fail',
    location: 'Test',
    requesterName: 'Test',
    requesterEmail: 'test@example.com'
  };
  
  console.log('========== Test Unsupported Work ==========');
  
  const result = saveSurveyWorkRequirement(testData);
  
  console.log('Success:', result.success);
  console.log('Message:', result.message);
  console.log('Expected: Should fail with "ไม่พบทีมที่รองรับงานนี้"');
  
  const isCorrect = !result.success && result.message.includes('ไม่พบทีม');
  
  console.log('\n📊 Test Result:', isCorrect ? '✅ PASS' : '❌ FAIL');
  console.log('==========================================');
  
  SpreadsheetApp.getUi().alert(
    'Test Result',
    isCorrect ? 
      '✅ PASS\n\nระบบ reject งานที่ไม่รองรับถูกต้อง' : 
      '❌ FAIL\n\n' + result.message,
    SpreadsheetApp.getUi().ButtonSet.OK
  );
}


/**
 * ทดสอบ isSurveyTeamAvailable() หลังแก้
 */
function testSurveyTeamAvailabilityFixed() {
  console.log('========== Test isSurveyTeamAvailable ==========');
  
  const testCases = [
    {
      team: 'T001',
      date: '2025-10-22',
      start: '14:00',
      end: '15:00',
      expected: true,
      reason: 'Survey Team A - no booking'
    },
    {
      team: 'T002',
      date: '2025-10-22',
      start: '14:00',
      end: '15:00',
      expected: true,  // ⭐ ควรเป็น true เพราะ Completed ถูก ignore
      reason: 'Survey Team B - has Completed booking (should ignore)'
    }
  ];
  
  let passCount = 0;
  
  testCases.forEach(function(test, index) {
    console.log('\n' + (index + 1) + '. Test:', test.reason);
    console.log('   Team:', test.team);
    console.log('   Date:', test.date);
    console.log('   Time:', test.start, '-', test.end);
    
    const result = isSurveyTeamAvailable(test.team, test.date, test.start, test.end);
    
    console.log('   Expected:', test.expected);
    console.log('   Got:', result);
    
    const pass = result === test.expected;
    console.log('   Result:', pass ? '✅ PASS' : '❌ FAIL');
    
    if (pass) passCount++;
  });
  
  console.log('\n========================================');
  console.log('📊 Summary:', passCount, '/', testCases.length, 'passed');
  console.log('========================================');
  
  SpreadsheetApp.getUi().alert(
    'Test Result',
    'Passed: ' + passCount + ' / ' + testCases.length + '\n\n' +
    (passCount === testCases.length ? '✅ All tests passed!' : '⚠️ Some tests failed'),
    SpreadsheetApp.getUi().ButtonSet.OK
  );
}

function getManualUrl() {
  try {
    const ss = SpreadsheetApp.getActiveSpreadsheet();
    const linkSheet = ss.getSheetByName('Link_URL');
    
    if (!linkSheet) {
      Logger.log('❌ ไม่พบ Sheet "Link_URL"');
      return null;
    }
    
    const url = linkSheet.getRange('B2').getValue();
    
    if (!url || url.toString().trim() === '') {
      Logger.log('❌ Cell B2 ว่างเปล่า');
      return null;
    }
    
    Logger.log('✅ Manual URL loaded: ' + url);
    return url.toString().trim();
    
  } catch (error) {
    Logger.log('❌ Error in getManualUrl: ' + error.toString());
    return null;
  }
}

function testGetManualUrl() {
  const url = getManualUrl();
  console.log('URL Result:', url);
}
