  setupFormChangeDetection();
  setupHolidayCheck();
  
  // ‚≠ê ‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏ö‡∏£‡∏£‡∏ó‡∏±‡∏î‡∏ô‡∏µ‡πâ - ‡πÄ‡∏ä‡πá‡∏Ñ‡∏ß‡∏±‡∏ô‡∏´‡∏¢‡∏∏‡∏î‡∏≠‡∏±‡∏ï‡πÇ‡∏ô‡∏°‡∏±‡∏ï‡∏¥
  setTimeout(function() {
    checkTodayHolidayStatus();
  }, 1500); // ‡∏£‡∏≠ 1.5 ‡∏ß‡∏¥‡∏ô‡∏≤‡∏ó‡∏µ‡∏´‡∏•‡∏±‡∏á‡πÇ‡∏´‡∏•‡∏î‡∏´‡∏ô‡πâ‡∏≤‡πÄ‡∏ß‡πá‡∏ö
};

    // ‚≠ê Prevent Page Exit - ‡∏õ‡πâ‡∏≠‡∏á‡∏Å‡∏±‡∏ô‡∏Å‡∏≤‡∏£‡∏≠‡∏≠‡∏Å‡∏à‡∏≤‡∏Å‡∏´‡∏ô‡πâ‡∏≤‡πÄ‡∏ß‡πá‡∏ö‡∏Ç‡∏ì‡∏∞‡∏Å‡∏£‡∏≠‡∏Å‡∏ü‡∏≠‡∏£‡πå‡∏°
    var formChanged = false;
    var isSubmitting = false;
    
    // ‡∏ï‡∏£‡∏ß‡∏à‡∏à‡∏±‡∏ö‡∏Å‡∏≤‡∏£‡πÄ‡∏õ‡∏•‡∏µ‡πà‡∏¢‡∏ô‡πÅ‡∏õ‡∏•‡∏á‡πÉ‡∏ô‡∏ü‡∏≠‡∏£‡πå‡∏°
    function setupFormChangeDetection() {
      var form = document.getElementById('rfiForm');
      var inputs = form.querySelectorAll('input, select, textarea');
      
      inputs.forEach(function(input) {
        // ‡∏Ç‡πâ‡∏≤‡∏°‡∏ü‡∏¥‡∏•‡∏î‡πå‡∏ó‡∏µ‡πà readonly (‡πÄ‡∏ä‡πà‡∏ô email)
        if (input.readOnly || input.disabled) return;
        
        input.addEventListener('change', function() {
          formChanged = true;
          console.log('Form changed detected');
        });
        
        input.addEventListener('input', function() {
          formChanged = true;
        });
      });
      
      // ‡∏ï‡∏£‡∏ß‡∏à‡∏à‡∏±‡∏ö‡∏Å‡∏≤‡∏£‡∏Ñ‡∏•‡∏¥‡∏Å‡∏õ‡∏∏‡πà‡∏° Inspection Type ‡πÅ‡∏•‡∏∞ Team
      var inspectionButtons = document.querySelectorAll('.inspection-btn');
      var teamButtons = document.querySelectorAll('.team-btn');
      
      inspectionButtons.forEach(function(btn) {
        btn.addEventListener('click', function() {
          formChanged = true;
        });
      });
      
      teamButtons.forEach(function(btn) {
        btn.addEventListener('click', function() {
          formChanged = true;
        });
      });
    }
    
    // ‡∏õ‡πâ‡∏≠‡∏á‡∏Å‡∏±‡∏ô‡∏Å‡∏≤‡∏£‡∏≠‡∏≠‡∏Å‡∏à‡∏≤‡∏Å‡∏´‡∏ô‡πâ‡∏≤‡πÄ‡∏ß‡πá‡∏ö
    window.addEventListener('beforeunload', function(e) {
      // ‡∏ñ‡πâ‡∏≤‡∏Å‡∏≥‡∏•‡∏±‡∏á submit ‡∏´‡∏£‡∏∑‡∏≠‡∏ü‡∏≠‡∏£‡πå‡∏°‡πÑ‡∏°‡πà‡πÑ‡∏î‡πâ‡πÄ‡∏õ‡∏•‡∏µ‡πà‡∏¢‡∏ô‡πÅ‡∏õ‡∏•‡∏á ‡πÉ‡∏´‡πâ‡∏≠‡∏≠‡∏Å‡πÑ‡∏î‡πâ‡πÄ‡∏•‡∏¢
      if (isSubmitting || !formChanged) {
        return undefined;
      }
      
      // ‡πÅ‡∏™‡∏î‡∏á‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏ß‡∏≤‡∏°‡πÄ‡∏ï‡∏∑‡∏≠‡∏ô
      var confirmationMessage = '‡∏Ñ‡∏∏‡∏ì‡∏°‡∏µ‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏ó‡∏µ‡πà‡∏¢‡∏±‡∏á‡πÑ‡∏°‡πà‡πÑ‡∏î‡πâ‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å ‡∏ï‡πâ‡∏≠‡∏á‡∏Å‡∏≤‡∏£‡∏≠‡∏≠‡∏Å‡∏à‡∏≤‡∏Å‡∏´‡∏ô‡πâ‡∏≤‡∏ô‡∏µ‡πâ‡∏´‡∏£‡∏∑‡∏≠‡πÑ‡∏°‡πà?';
      
      e.preventDefault();
      e.returnValue = confirmationMessage;
      return confirmationMessage;
    });
    
    // ‡∏£‡∏µ‡πÄ‡∏ã‡πá‡∏ï flag ‡πÄ‡∏°‡∏∑‡πà‡∏≠ submit ‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à
    function resetFormChangeFlag() {
      formChanged = false;
      isSubmitting = false;
      console.log('Form change flag reset');
    }
    
    // ‡∏ï‡∏±‡πâ‡∏á‡∏Ñ‡πà‡∏≤ flag ‡πÄ‡∏°‡∏∑‡πà‡∏≠‡πÄ‡∏£‡∏¥‡πà‡∏° submit
    function setSubmittingFlag() {
      isSubmitting = true;
      console.log('Submitting flag set');
    }

// ‡∏≠‡∏±‡∏õ‡πÄ‡∏î‡∏ï: File Upload Event Listener
document.getElementById('locationLayoutFile').addEventListener('change', function(e) {
  var file = e.target.files[0];
  var fileInfo = document.getElementById('fileInfo');
  var fileName = document.getElementById('fileName');
  var fileSize = document.getElementById('fileSize');
  var clearBtn = document.getElementById('clearFileBtn');
  
  if (file) {
    // ‚≠ê ‡πÄ‡∏ä‡πá‡∏Ñ‡∏Ç‡∏ô‡∏≤‡∏î‡πÑ‡∏ü‡∏•‡πå (‡πÑ‡∏°‡πà‡πÄ‡∏Å‡∏¥‡∏ô 10 MB)
    var maxSize = 10 * 1024 * 1024; // 10 MB
    
    if (file.size > maxSize) {
      showMessage('‚ùå ‡πÑ‡∏ü‡∏•‡πå‡πÉ‡∏´‡∏ç‡πà‡πÄ‡∏Å‡∏¥‡∏ô‡πÑ‡∏õ! ‡∏Ç‡∏ô‡∏≤‡∏î‡πÑ‡∏ü‡∏•‡πå‡∏ï‡πâ‡∏≠‡∏á‡πÑ‡∏°‡πà‡πÄ‡∏Å‡∏¥‡∏ô 10 MB', 'error');
      e.target.value = ''; // ‡∏•‡πâ‡∏≤‡∏á‡πÑ‡∏ü‡∏•‡πå
      fileInfo.style.display = 'none';
      clearBtn.style.display = 'none';
      return;
    }
    
    // ‚≠ê ‡πÅ‡∏™‡∏î‡∏á‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡πÑ‡∏ü‡∏•‡πå
    fileName.textContent = file.name;
    fileSize.textContent = formatFileSize(file.size);
    fileInfo.style.display = 'block';
    clearBtn.style.display = 'block'; // ‚≠ê ‡πÅ‡∏™‡∏î‡∏á‡∏õ‡∏∏‡πà‡∏°‡∏•‡∏ö
    
    showMessage('‚úì ‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡πÑ‡∏ü‡∏•‡πå: ' + file.name, 'success', 3000);
  } else {
    fileInfo.style.display = 'none';
    clearBtn.style.display = 'none';
  }
});

// ‚≠ê UPDATED: ‡∏•‡∏ö‡πÑ‡∏ü‡∏•‡πå + ‡∏ã‡πà‡∏≠‡∏ô‡∏õ‡∏∏‡πà‡∏°
function clearLocationFile() {
  var fileInput = document.getElementById('locationLayoutFile');
  var fileInfo = document.getElementById('fileInfo');
  var clearBtn = document.getElementById('clearFileBtn');
  
  if (confirm('üóëÔ∏è ‡∏ï‡πâ‡∏≠‡∏á‡∏Å‡∏≤‡∏£‡∏•‡∏ö‡πÑ‡∏ü‡∏•‡πå‡∏ó‡∏µ‡πà‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡πÑ‡∏ß‡πâ‡∏´‡∏£‡∏∑‡∏≠‡πÑ‡∏°‡πà?')) {
    fileInput.value = '';
    fileInfo.style.display = 'none';
    if (clearBtn) clearBtn.style.display = 'none';
    
    console.log('‚úÖ File cleared');
    showMessage('üóëÔ∏è ‡∏•‡∏ö‡πÑ‡∏ü‡∏•‡πå‡πÄ‡∏£‡∏µ‡∏¢‡∏ö‡∏£‡πâ‡∏≠‡∏¢‡πÅ‡∏•‡πâ‡∏ß - ‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡πÑ‡∏ü‡∏•‡πå‡πÉ‡∏´‡∏°‡πà', 'info', 3000);
  }
}

// ‚≠ê ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡πÅ‡∏õ‡∏•‡∏á‡∏Ç‡∏ô‡∏≤‡∏î‡πÑ‡∏ü‡∏•‡πå
function formatFileSize(bytes) {
  if (bytes === 0) return '0 Bytes';
  
  var k = 1024;
  var sizes = ['Bytes', 'KB', 'MB', 'GB'];
  var i = Math.floor(Math.log(bytes) / Math.log(k));
  
  return Math.round(bytes / Math.pow(k, i) * 100) / 100 + ' ' + sizes[i];
}

    function initInspectionTypeButtons() {
  var inspectionButtons = document.querySelectorAll('.inspection-btn');
  
  inspectionButtons.forEach(function(btn) {
    btn.addEventListener('click', function() {
      // ‚≠ê ‡∏•‡∏ö active ‡∏≠‡∏≠‡∏Å‡∏à‡∏≤‡∏Å‡∏ó‡∏∏‡∏Å‡∏õ‡∏∏‡πà‡∏°
      inspectionButtons.forEach(function(b) {
        b.classList.remove('active');
      });
      
      // ‚≠ê ‡πÄ‡∏û‡∏¥‡πà‡∏° active ‡πÉ‡∏´‡πâ‡∏õ‡∏∏‡πà‡∏°‡∏ó‡∏µ‡πà‡∏Å‡∏î
      this.classList.add('active');
      
      var type = this.getAttribute('data-type');
      selectedInspectionType = type;
      document.getElementById('inspectionType').value = type;
      
      // ‚≠ê ‡πÅ‡∏™‡∏î‡∏á/‡∏ã‡πà‡∏≠‡∏ô info-box
      var externalBox = document.getElementById('infoBoxExternal');
      var internalBox = document.getElementById('infoBoxInternal');
      
      if (type === 'external') {
        externalBox.classList.add('show');
        internalBox.classList.remove('show');
        showMessage('‚úÖ ‡πÄ‡∏•‡∏∑‡∏≠‡∏Å: External Inspection (‡∏ï‡πâ‡∏≠‡∏á‡∏Ç‡∏≠‡∏≠‡∏ô‡∏∏‡∏°‡∏±‡∏ï‡∏¥ Consultant)', 'success', 3000);
        setMinDateExternal();
      } else if (type === 'internal') {
        internalBox.classList.add('show');
        externalBox.classList.remove('show');
        showMessage('‚úÖ ‡πÄ‡∏•‡∏∑‡∏≠‡∏Å: Internal Inspection (‡πÑ‡∏°‡πà‡∏ï‡πâ‡∏≠‡∏á‡∏Ç‡∏≠‡∏≠‡∏ô‡∏∏‡∏°‡∏±‡∏ï‡∏¥, ‡∏à‡∏≠‡∏á‡∏ß‡∏±‡∏ô‡∏ô‡∏µ‡πâ‡∏Å‡πá‡πÑ‡∏î‡πâ)', 'success', 3000);
        setMinDateInternal();
      }
      
      // ‚≠ê ‡πÄ‡∏û‡∏¥‡πà‡∏°: Reset Date ‡πÄ‡∏û‡∏∑‡πà‡∏≠‡πÉ‡∏´‡πâ‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡πÉ‡∏´‡∏°‡πà
      document.getElementById('requestDate').value = '';
      document.getElementById('startTime').innerHTML = '<option value="">-- ‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡∏ß‡∏±‡∏ô‡∏ó‡∏µ‡πà‡∏Å‡πà‡∏≠‡∏ô --</option>';
      document.getElementById('startTime').disabled = true;
      resetEndTimeSelect();
      
      // ‚≠ê Log ‡πÄ‡∏û‡∏∑‡πà‡∏≠ debug
      console.log('‚úÖ Selected Inspection Type:', type);
      console.log('‚úÖ Hidden input value:', document.getElementById('inspectionType').value);
    });
  });
}

    // ‚≠ê ‡∏ï‡∏±‡πâ‡∏á Min Date ‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö External (‡∏û‡∏£‡∏∏‡πà‡∏á‡∏ô‡∏µ‡πâ)
    function setMinDateExternal() {
      var today = new Date();
      var tomorrow = new Date(today);
      tomorrow.setDate(tomorrow.getDate() + 1);
      
      var dateString = tomorrow.getFullYear() + '-' + 
                      String(tomorrow.getMonth() + 1).padStart(2, '0') + '-' + 
                      String(tomorrow.getDate()).padStart(2, '0');
      document.getElementById('requestDate').setAttribute('min', dateString);
    }

    // ‚≠ê ‡∏ï‡∏±‡πâ‡∏á Min Date ‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö Internal (‡∏ß‡∏±‡∏ô‡∏ô‡∏µ‡πâ)
    function setMinDateInternal() {
      var today = new Date();
      var dateString = today.getFullYear() + '-' + 
                      String(today.getMonth() + 1).padStart(2, '0') + '-' + 
                      String(today.getDate()).padStart(2, '0');
      document.getElementById('requestDate').setAttribute('min', dateString);
    }

    function loadManualLink() {
      google.script.run
        .withSuccessHandler(function(url) {
          if (url) {
            var manualBtn = document.getElementById('manualLinkBtn');
            manualBtn.href = url + '?page=manual';
            manualBtn.style.display = 'flex';
          }
        })
        .withFailureHandler(function(error) {
          console.error('Error loading manual link:', error);
        })
        .getManualUrl();
    }
    
    function initTeamCategoryButtons() {
      var teamButtons = document.querySelectorAll('.team-btn');
      var multiSelectContainer = document.getElementById('multiSelectContainer');
      
      teamButtons.forEach(function(btn) {
        btn.addEventListener('click', function() {
          teamButtons.forEach(function(b) {
            b.classList.remove('active');
            b.classList.remove('recommended');
          });
          
          this.classList.add('active');
          
          var category = this.getAttribute('data-category');
          
          if (category === '‡∏á‡∏≤‡∏ô‡∏£‡∏ß‡∏°') {
            isMultiWork = true;
            multiSelectContainer.classList.add('show');
            selectedTeamCategory = null;
            document.getElementById('teamCategory').value = '';
            showMessage('‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡∏´‡∏°‡∏ß‡∏î‡∏á‡∏≤‡∏ô‡∏ó‡∏µ‡πà‡∏ï‡πâ‡∏≠‡∏á‡∏Å‡∏≤‡∏£ (‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡πÑ‡∏î‡πâ‡∏´‡∏•‡∏≤‡∏¢‡∏´‡∏°‡∏ß‡∏î)', 'info', 3000);
          } else {
            isMultiWork = false;
            multiSelectContainer.classList.remove('show');
            clearAllCheckboxes();
            selectedTeamCategory = category;
            document.getElementById('teamCategory').value = category;
            
            if (recommendedCategory && category === recommendedCategory) {
              showMessage('‚úì ‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡∏´‡∏°‡∏ß‡∏î‡∏á‡∏≤‡∏ô: ' + category + ' (‡∏ï‡∏≤‡∏°‡∏Ñ‡∏≥‡πÅ‡∏ô‡∏∞‡∏ô‡∏≥)', 'success', 2000);
            } else {
              showMessage('‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡∏´‡∏°‡∏ß‡∏î‡∏á‡∏≤‡∏ô: ' + category, 'info', 2000);
            }
          }
        });
      });
    }
    
    function initCheckboxes() {
      var checkboxes = document.querySelectorAll('#multiSelectContainer input[type="checkbox"]');
      
      checkboxes.forEach(function(checkbox) {
        checkbox.addEventListener('change', updateMultiWorkSelection);
      });
    }
    
    function updateMultiWorkSelection() {
      if (!isMultiWork) return;
      
      var checkboxes = document.querySelectorAll('#multiSelectContainer input[type="checkbox"]:checked');
      var selectedCategories = [];
      
      checkboxes.forEach(function(cb) {
        selectedCategories.push(cb.value);
      });
      
      if (selectedCategories.length > 0) {
        selectedTeamCategory = selectedCategories.join(',');
        document.getElementById('teamCategory').value = selectedTeamCategory;
        showMessage('‡πÄ‡∏•‡∏∑‡∏≠‡∏Å: ' + selectedTeamCategory, 'info', 2000);
      } else {
        selectedTeamCategory = null;
        document.getElementById('teamCategory').value = '';
      }
    }
    
    function clearAllCheckboxes() {
      var checkboxes = document.querySelectorAll('#multiSelectContainer input[type="checkbox"]');
      checkboxes.forEach(function(cb) {
        cb.checked = false;
      });
    }

    function loadUserEmailAndName() {
      var emailInput = document.getElementById('requesterEmail');
      var nameInput = document.getElementById('requesterName');
      var nameInfo = document.getElementById('nameInfo');
      
      emailInput.value = '‡∏Å‡∏≥‡∏•‡∏±‡∏á‡πÇ‡∏´‡∏•‡∏î...';
      emailInput.disabled = true;
      
      nameInput.value = '';
      nameInput.placeholder = '‡∏Å‡∏≥‡∏•‡∏±‡∏á‡πÇ‡∏´‡∏•‡∏î...';
      nameInput.readOnly = true;
      nameInput.style.background = '#f0f7ff';
      nameInput.style.cursor = 'wait';
      
      google.script.run
        .withSuccessHandler(function(email) {
          if (email) {
            emailInput.value = email;
            emailInput.disabled = true;
            
            google.script.run
              .withSuccessHandler(function(result) {
                if (result.success && result.name) {
                  nameInput.value = result.name;
                  nameInput.readOnly = false;
                  nameInput.style.background = 'linear-gradient(135deg, #ecfdf5 0%, #d1fae5 100%)';
                  nameInput.style.cursor = 'text';
                  nameInfo.innerHTML = '‚úÖ ‡∏û‡∏ö‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡πÉ‡∏ô‡∏£‡∏∞‡∏ö‡∏ö - ‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡πÅ‡∏Å‡πâ‡πÑ‡∏Ç‡πÑ‡∏î‡πâ';
                  nameInfo.style.color = '#16a34a';
                } else if (!result.success && result.message) {
                  nameInput.value = '';
                  nameInput.placeholder = '‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå‡πÉ‡∏ä‡πâ‡∏á‡∏≤‡∏ô';
                  nameInput.readOnly = true;
                  nameInput.style.background = '#fee2e2';
                  nameInfo.innerHTML = '‚ùå ' + result.message;
                  nameInfo.style.color = '#dc2626';
                  showMessage(result.message, 'error');
                } else {
                  nameInput.value = '';
                  nameInput.placeholder = '‡∏Å‡∏£‡∏≠‡∏Å‡∏ä‡∏∑‡πà‡∏≠-‡∏ô‡∏≤‡∏°‡∏™‡∏Å‡∏∏‡∏•';
                  nameInput.readOnly = false;
                  nameInput.style.background = '#ffffff';
                  nameInput.style.cursor = 'text';
                  nameInfo.innerHTML = 'üìù ‡∏Å‡∏£‡∏≠‡∏Å‡∏ä‡∏∑‡πà‡∏≠‡∏ú‡∏π‡πâ‡∏Ç‡∏≠ - ‡∏£‡∏∞‡∏ö‡∏ö‡∏à‡∏∞‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡πÉ‡∏ô‡∏ê‡∏≤‡∏ô‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•';
                  nameInfo.style.color = '#1877f2';
                }
              })
              .withFailureHandler(function(error) {
                nameInput.value = '';
                nameInput.placeholder = '‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î';
                nameInput.readOnly = false;
                nameInput.style.background = '#ffffff';
                nameInput.style.cursor = 'text';
                nameInfo.innerHTML = '‚ö†Ô∏è ‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î - ‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏Å‡∏£‡∏≠‡∏Å‡∏ä‡∏∑‡πà‡∏≠';
                nameInfo.style.color = '#f59e0b';
              })
              .getUserNameFromEmail(email);
            
          } else {
            emailInput.value = '';
            emailInput.placeholder = '‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡∏î‡∏∂‡∏á‡∏≠‡∏µ‡πÄ‡∏°‡∏•‡πÑ‡∏î‡πâ - ‡∏Å‡∏£‡∏∏‡∏ì‡∏≤ Login';
            emailInput.disabled = false;
            
            nameInput.value = '';
            nameInput.placeholder = '‡∏Å‡∏£‡∏∏‡∏ì‡∏≤ Login ‡∏Å‡πà‡∏≠‡∏ô';
            nameInput.readOnly = true;
            nameInput.style.background = '#fee2e2';
            nameInfo.innerHTML = '‚ö†Ô∏è ‡∏Å‡∏£‡∏∏‡∏ì‡∏≤ Login ‡∏î‡πâ‡∏ß‡∏¢ Google Account';
            nameInfo.style.color = '#dc2626';
            
            showMessage('‚ö†Ô∏è ‡∏Å‡∏£‡∏∏‡∏ì‡∏≤ Login ‡∏î‡πâ‡∏ß‡∏¢ Google Account', 'warning');
          }
        })
        .withFailureHandler(function(error) {
          emailInput.value = '';
          emailInput.placeholder = '‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î - ‡∏Å‡∏£‡∏∏‡∏ì‡∏≤ Login';
          emailInput.disabled = false;
          
          nameInput.value = '';
          nameInput.placeholder = '‡∏Å‡∏£‡∏∏‡∏ì‡∏≤ Login ‡∏Å‡πà‡∏≠‡∏ô';
          nameInput.readOnly = true;
          nameInput.style.background = '#fee2e2';
          nameInfo.innerHTML = '‚ö†Ô∏è ‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î‡πÉ‡∏ô‡∏Å‡∏≤‡∏£‡∏î‡∏∂‡∏á‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•';
          nameInfo.style.color = '#dc2626';
          
          showMessage('‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î‡πÉ‡∏ô‡∏Å‡∏≤‡∏£‡∏î‡∏∂‡∏á‡∏≠‡∏µ‡πÄ‡∏°‡∏•', 'error');
        })
        .getCurrentUserEmail();
    }
    
function loadWorkTypes() {
  var workTypeSelect = document.getElementById('workType');
  var workTypeNote = document.getElementById('workTypeNote');
  
  workTypeSelect.innerHTML = '<option value="">-- ‡∏Å‡∏≥‡∏•‡∏±‡∏á‡πÇ‡∏´‡∏•‡∏î‡∏õ‡∏£‡∏∞‡πÄ‡∏†‡∏ó‡∏á‡∏≤‡∏ô... --</option>';
  workTypeSelect.disabled = true;
  
  if (workTypeNote) {
    workTypeNote.style.display = 'none';
    workTypeNote.innerHTML = '';
  }
  
  google.script.run
    .withSuccessHandler(function(workTypes) {
      workTypeSelect.innerHTML = '';
      
      if (!workTypes || workTypes.length === 0) {
        workTypeSelect.innerHTML = '<option value="">-- ‡πÑ‡∏°‡πà‡∏û‡∏ö‡∏õ‡∏£‡∏∞‡πÄ‡∏†‡∏ó‡∏á‡∏≤‡∏ô --</option>';
        showMessage('‡πÑ‡∏°‡πà‡∏û‡∏ö‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏õ‡∏£‡∏∞‡πÄ‡∏†‡∏ó‡∏á‡∏≤‡∏ô ‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡πÉ‡∏ô Sheet "Work"', 'warning');
      } else {
        workTypeSelect.innerHTML = '<option value="">-- ‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡∏õ‡∏£‡∏∞‡πÄ‡∏†‡∏ó‡∏á‡∏≤‡∏ô --</option>';
        
        workTypes.forEach(function(workType) {
          var option = document.createElement('option');
          option.value = workType.name;
          
          // ‚úÖ Format: "QC_Type Name_Work (Duration ‡∏ô‡∏≤‡∏ó‡∏µ)"
          option.textContent = workType.qcType + ' ' + workType.name + ' (' + workType.duration + ' ‡∏ô‡∏≤‡∏ó‡∏µ)';
          
          option.setAttribute('data-duration', workType.duration);
          option.setAttribute('data-qctype', workType.qcType);
          option.setAttribute('data-sequence', workType.sequence);
          option.setAttribute('data-note', workType.note || ''); // ‚úÖ ‡πÄ‡∏Å‡πá‡∏ö note
          
          workTypeSelect.appendChild(option);
        });
        
        workTypeSelect.disabled = false;
        
        // ‚úÖ ‡πÄ‡∏û‡∏¥‡πà‡∏° Event Listener ‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö‡πÅ‡∏™‡∏î‡∏á Note
        workTypeSelect.addEventListener('change', handleWorkTypeChange);
      }
    })
    .withFailureHandler(function(error) {
      workTypeSelect.innerHTML = '<option value="">-- ‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î --</option>';
      showMessage('‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î‡πÉ‡∏ô‡∏Å‡∏≤‡∏£‡πÇ‡∏´‡∏•‡∏î‡∏õ‡∏£‡∏∞‡πÄ‡∏†‡∏ó‡∏á‡∏≤‡∏ô', 'error');
    })
    .getWorkTypeList();
}
    
function handleWorkTypeChange() {
  var workType = document.getElementById('workType').value;
  var workTypeSelect = document.getElementById('workType');
  var workTypeNote = document.getElementById('workTypeNote');
  
  // ‚úÖ Reset Time ‡πÄ‡∏°‡∏∑‡πà‡∏≠‡πÄ‡∏õ‡∏•‡∏µ‡πà‡∏¢‡∏ô Work Type
  resetTimeSelects();
  
  // ‚úÖ ‡πÅ‡∏™‡∏î‡∏á/‡∏ã‡πà‡∏≠‡∏ô Note
  if (workType && workTypeNote) {
    var selectedOption = workTypeSelect.options[workTypeSelect.selectedIndex];
    var note = selectedOption.getAttribute('data-note');
    
    if (note && note.trim() !== '') {
      workTypeNote.innerHTML = '<strong>‡∏´‡∏°‡∏≤‡∏¢‡πÄ‡∏´‡∏ï‡∏∏:</strong> ' + note;
      workTypeNote.style.display = 'block';
    } else {
      workTypeNote.style.display = 'none';
      workTypeNote.innerHTML = '';
    }
  } else if (workTypeNote) {
    workTypeNote.style.display = 'none';
    workTypeNote.innerHTML = '';
  }
  
  if (!workType) {
    hideRecommendation();
    return;
  }
  
  showRecommendationLoading();
  
  google.script.run
    .withSuccessHandler(handleRecommendationResponse)
    .withFailureHandler(function(error) {
      hideRecommendation();
    })
    .getRecommendedCategory(workType);
}

function resetTimeSelects() {
  var startTimeSelect = document.getElementById('startTime');
  var endTimeSelect = document.getElementById('endTime');
  var dateInput = document.getElementById('requestDate');
  
  // ‡πÄ‡∏Å‡πá‡∏ö‡∏Ñ‡πà‡∏≤‡∏ß‡∏±‡∏ô‡∏ó‡∏µ‡πà‡πÑ‡∏ß‡πâ
  var currentDate = dateInput.value;
  
  // Reset Start Time
  if (currentDate) {
    // ‡∏ñ‡πâ‡∏≤‡∏°‡∏µ‡∏ß‡∏±‡∏ô‡∏ó‡∏µ‡πà‡∏≠‡∏¢‡∏π‡πà‡πÅ‡∏•‡πâ‡∏ß ‡πÉ‡∏´‡πâ reload slots ‡πÉ‡∏´‡∏°‡πà
    startTimeSelect.innerHTML = '<option value="">-- ‡∏Å‡∏≥‡∏•‡∏±‡∏á‡πÇ‡∏´‡∏•‡∏î‡πÄ‡∏ß‡∏•‡∏≤‡πÉ‡∏´‡∏°‡πà... --</option>';
    startTimeSelect.disabled = true;
    startTimeSelect.className += ' loading-select';
  } else {
    startTimeSelect.innerHTML = '<option value="">-- ‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡∏ß‡∏±‡∏ô‡∏ó‡∏µ‡πà‡∏Å‡πà‡∏≠‡∏ô --</option>';
    startTimeSelect.disabled = true;
  }
  
  startTimeSelect.value = '';
  
  // Reset End Time
  resetEndTimeSelect();
  
  console.log('‚úÖ Time selects reset due to Work Type change');
  
  // ‚úÖ ‡∏ñ‡πâ‡∏≤‡∏°‡∏µ‡∏ß‡∏±‡∏ô‡∏ó‡∏µ‡πà‡∏≠‡∏¢‡∏π‡πà‡πÅ‡∏•‡πâ‡∏ß ‡πÉ‡∏´‡πâ‡πÇ‡∏´‡∏•‡∏î slots ‡πÉ‡∏´‡∏°‡πà‡∏ó‡∏±‡∏ô‡∏ó‡∏µ
  if (currentDate) {
    setTimeout(function() {
      updateAvailableSlots();
    }, 100);
  }
}

    
    function showRecommendationLoading() {
      var box = document.getElementById('recommendationBox');
      var text = document.getElementById('recommendationText');
      
      text.innerHTML = 'üîç ‡∏Å‡∏≥‡∏•‡∏±‡∏á‡∏ß‡∏¥‡πÄ‡∏Ñ‡∏£‡∏≤‡∏∞‡∏´‡πå‡∏ó‡∏µ‡∏°‡∏á‡∏≤‡∏ô‡∏ó‡∏µ‡πà‡πÄ‡∏´‡∏°‡∏≤‡∏∞‡∏™‡∏°...';
      box.classList.add('show');
      
      document.querySelectorAll('.team-btn').forEach(function(btn) {
        btn.classList.remove('recommended');
      });
    }
    
    function handleRecommendationResponse(result) {
      if (!result || !result.success || !result.recommended || result.recommended.length === 0) {
        hideRecommendation();
        return;
      }
      
      recommendedCategory = result.recommended;
      showRecommendation(result);
      highlightRecommendedButtons(result.recommended);
    }
    
    function showRecommendation(result) {
      var box = document.getElementById('recommendationBox');
      var text = document.getElementById('recommendationText');
      
      var recommendedList = result.recommended;
      
      if (recommendedList.length === 1) {
        var item = recommendedList[0];
        var icon = getCategoryIcon(item.category);
        
        var html = '<strong>' + icon + ' ‡πÅ‡∏ô‡∏∞‡∏ô‡∏≥‡∏ó‡∏µ‡∏°‡∏á‡∏≤‡∏ô: ' + item.category + '</strong>';
        html += '<div class="team-info">‚úì ‡∏°‡∏µ‡∏ó‡∏µ‡∏°‡∏£‡∏≠‡∏á‡∏£‡∏±‡∏ö ' + item.count + ' ‡∏ó‡∏µ‡∏°';
        
        if (item.teams.length > 0 && item.teams.length <= 3) {
          html += ' (' + item.teams.join(', ') + ')';
        }
        
        html += '</div>';
        text.innerHTML = html;
      } else {
        var html = '<strong>üí° ‡πÅ‡∏ô‡∏∞‡∏ô‡∏≥‡∏ó‡∏µ‡∏°‡∏á‡∏≤‡∏ô‡∏ó‡∏µ‡πà‡∏£‡∏≠‡∏á‡∏£‡∏±‡∏ö:</strong><div class="team-info">';
        
        recommendedList.forEach(function(item, index) {
          var icon = getCategoryIcon(item.category);
          html += icon + ' <strong>' + item.category + '</strong>: ' + item.count + ' ‡∏ó‡∏µ‡∏°';
          
          if (item.teams.length > 0 && item.teams.length <= 2) {
            html += ' (' + item.teams.join(', ') + ')';
          }
          
          if (index < recommendedList.length - 1) {
            html += '<br>';
          }
        });
        
        html += '</div>';
        text.innerHTML = html;
      }
      
      box.classList.add('show');
    }
    
    function getCategoryIcon(category) {
      if (category === 'Survey') return 'üîç';
      if (category === 'Lab') return 'üß™';
      if (category === 'Inspector') return 'üìã';
      return 'üí°';
    }
    
    function highlightRecommendedButtons(recommendedList) {
      document.querySelectorAll('.team-btn').forEach(function(btn) {
        btn.classList.remove('recommended');
      });
      
      recommendedList.forEach(function(item) {
        document.querySelectorAll('.team-btn').forEach(function(btn) {
          if (btn.getAttribute('data-category') === item.category) {
            btn.classList.add('recommended');
          }
        });
      });
    }
    
    function hideRecommendation() {
      var box = document.getElementById('recommendationBox');
      box.classList.remove('show');
      recommendedCategory = null;
      
      document.querySelectorAll('.team-btn').forEach(function(btn) {
        btn.classList.remove('recommended');
      });
    }
    
    function setMinDate() {
      // Default: External mode
      setMinDateExternal();
    }
    
    function showMessage(text, type, duration) {
      if (typeof duration === 'undefined') duration = 5000;
      
      var messageDiv = document.getElementById('message');
      messageDiv.textContent = text;
      messageDiv.className = 'message ' + type;
      messageDiv.style.display = 'block';
      
      setTimeout(function() {
        messageDiv.style.display = 'none';
      }, duration);
    }

    // ‚≠ê Toast Notification System
    function showToast(title, message, type, duration) {
      if (typeof type === 'undefined') type = 'info';
      if (typeof duration === 'undefined') duration = 5000;
      
      var container = document.getElementById('toastContainer');
      if (!container) {
        container = document.createElement('div');
        container.id = 'toastContainer';
        container.className = 'toast-container';
        document.body.appendChild(container);
      }
      
      var icons = {
        success: '‚úÖ',
        error: '‚ùå',
        warning: '‚ö†Ô∏è',
        info: '‚ÑπÔ∏è'
      };
      
      var toast = document.createElement('div');
      toast.className = 'toast ' + type;
      toast.innerHTML = `
        <div class="toast-icon">${icons[type] || '‚ÑπÔ∏è'}</div>
        <div class="toast-content">
          <div class="toast-title">${title}</div>
          ${message ? '<div class="toast-message">' + message + '</div>' : ''}
        </div>
        <button class="toast-close" onclick="removeToast(this)">√ó</button>
        <div class="toast-progress"></div>
      `;
      
      container.appendChild(toast);
      
      var progress = toast.querySelector('.toast-progress');
      var startTime = Date.now();
      
      var interval = setInterval(function() {
        var elapsed = Date.now() - startTime;
        var percentage = (elapsed / duration) * 100;
        
        if (percentage >= 100) {
          clearInterval(interval);
          removeToast(toast.querySelector('.toast-close'));
        } else {
          progress.style.width = (100 - percentage) + '%';
        }
      }, 50);
      
      toast._progressInterval = interval;
    }
    
    function removeToast(closeBtn) {
      var toast = closeBtn.parentElement || closeBtn;
      if (toast._progressInterval) {
        clearInterval(toast._progressInterval);
      }
      
      toast.style.animation = 'slideOutRight 0.3s ease-out';
      setTimeout(function() {
        if (toast.parentElement) {
          toast.parentElement.removeChild(toast);
        }
      }, 300);
    }

    // ‚≠ê Progress Bar in Submit Button
    function updateSubmitProgress(step, totalSteps, stepText) {
      var progressBar = document.getElementById('submitProgressBar');
      var stepTextDiv = document.getElementById('submitStepText');
      
      if (!progressBar || !stepTextDiv) return;
      
      var percentage = (step / totalSteps) * 100;
      progressBar.style.width = percentage + '%';
      
      if (stepText) {
        stepTextDiv.textContent = '‚è≥ ' + stepText + ' (' + step + '/' + totalSteps + ')';
        stepTextDiv.classList.add('show');
      } else {
        stepTextDiv.classList.remove('show');
      }
    }
    
    function resetSubmitProgress() {
      var progressBar = document.getElementById('submitProgressBar');
      var stepTextDiv = document.getElementById('submitStepText');
      
      if (progressBar) progressBar.style.width = '0%';
      if (stepTextDiv) {
        stepTextDiv.classList.remove('show');
        stepTextDiv.textContent = '';
      }
    }
    
    document.getElementById('requestDate').addEventListener('change', updateAvailableSlots);
    document.getElementById('startTime').addEventListener('change', updateEndTimeSlots);
    document.getElementById('rfiForm').addEventListener('submit', handleSubmit);
    
    function updateAvailableSlots() {
      var date = document.getElementById('requestDate').value;
      var startTimeSelect = document.getElementById('startTime');
      var endTimeSelect = document.getElementById('endTime');
      
      setSelectLoading(startTimeSelect, '‡∏Å‡∏≥‡∏•‡∏±‡∏á‡πÇ‡∏´‡∏•‡∏î‡πÄ‡∏ß‡∏•‡∏≤‡∏ó‡∏µ‡πà‡∏ß‡πà‡∏≤‡∏á...');
      resetEndTimeSelect();
      
      if (date) {
        var selectedDate = new Date(date + 'T00:00:00');
        var today = new Date();
        var todayDateOnly = new Date(today.getFullYear(), today.getMonth(), today.getDate());
        var selectedDateOnly = new Date(selectedDate.getFullYear(), selectedDate.getMonth(), selectedDate.getDate());
        
        // ‚≠ê Internal: ‡∏≠‡∏ô‡∏∏‡∏ç‡∏≤‡∏ï‡πÉ‡∏´‡πâ‡∏à‡∏≠‡∏á‡∏ß‡∏±‡∏ô‡∏ô‡∏µ‡πâ‡πÑ‡∏î‡πâ (‡∏ñ‡πâ‡∏≤‡πÄ‡∏´‡∏•‡∏∑‡∏≠‡πÄ‡∏ß‡∏•‡∏≤ ‚â•30 ‡∏ô‡∏≤‡∏ó‡∏µ)
        if (selectedInspectionType === 'internal') {
          if (selectedDateOnly < todayDateOnly) {
            startTimeSelect.className = startTimeSelect.className.replace(' loading-select', '');
            startTimeSelect.innerHTML = '<option value="">-- ‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡∏ß‡∏±‡∏ô‡∏ô‡∏µ‡πâ‡∏´‡∏£‡∏∑‡∏≠‡∏ß‡∏±‡∏ô‡∏ñ‡∏±‡∏î‡πÑ‡∏õ --</option>';
            startTimeSelect.disabled = true;
            showMessage('Internal: ‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡∏ß‡∏±‡∏ô‡πÉ‡∏ô‡∏≠‡∏î‡∏µ‡∏ï‡πÑ‡∏î‡πâ', 'warning');
            return;
          }
        } else {
          // External: ‡∏ï‡πâ‡∏≠‡∏á‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡∏û‡∏£‡∏∏‡πà‡∏á‡∏ô‡∏µ‡πâ‡∏Ç‡∏∂‡πâ‡∏ô‡πÑ‡∏õ
          if (selectedDateOnly <= todayDateOnly) {
            startTimeSelect.className = startTimeSelect.className.replace(' loading-select', '');
            startTimeSelect.innerHTML = '<option value="">-- ‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡∏ß‡∏±‡∏ô‡∏û‡∏£‡∏∏‡πà‡∏á‡∏ô‡∏µ‡πâ‡πÄ‡∏õ‡πá‡∏ô‡∏ï‡πâ‡∏ô‡πÑ‡∏õ --</option>';
            startTimeSelect.disabled = true;
            showMessage('External: ‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡∏ß‡∏±‡∏ô‡∏û‡∏£‡∏∏‡πà‡∏á‡∏ô‡∏µ‡πâ‡∏´‡∏£‡∏∑‡∏≠‡∏ß‡∏±‡∏ô‡∏ñ‡∏±‡∏î‡πÑ‡∏õ', 'warning');
            return;
          }
          
          // ‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡πÄ‡∏ß‡∏•‡∏≤ 13:00 ‡∏ô. ‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö‡∏û‡∏£‡∏∏‡πà‡∏á‡∏ô‡∏µ‡πâ
          var tomorrow = new Date(todayDateOnly);
          tomorrow.setDate(tomorrow.getDate() + 1);
          var isTomorrow = selectedDateOnly.getTime() === tomorrow.getTime();
          
          if (isTomorrow) {
            var currentHour = today.getHours();
            
            if (currentHour >= 13) {
              startTimeSelect.className = startTimeSelect.className.replace(' loading-select', '');
              startTimeSelect.innerHTML = '<option value="">-- ‡πÄ‡∏•‡∏¢‡πÄ‡∏ß‡∏•‡∏≤‡∏à‡∏≠‡∏á‡∏ß‡∏±‡∏ô‡∏û‡∏£‡∏∏‡πà‡∏á‡∏ô‡∏µ‡πâ‡πÅ‡∏•‡πâ‡∏ß (‡∏ï‡πâ‡∏≠‡∏á‡∏à‡∏≠‡∏á‡∏Å‡πà‡∏≠‡∏ô 13:00 ‡∏ô.) --</option>';
              startTimeSelect.disabled = true;
              showMessage('‚ùå External: ‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡∏à‡∏≠‡∏á‡∏ß‡∏±‡∏ô‡∏û‡∏£‡∏∏‡πà‡∏á‡∏ô‡∏µ‡πâ‡πÑ‡∏î‡πâ‡πÅ‡∏•‡πâ‡∏ß (‡πÄ‡∏•‡∏¢ 13:00 ‡∏ô.)', 'error');
              return;
            }
            
            if (currentHour >= 11 && currentHour < 13) {
              var timeLeft = 13 - currentHour;
              showMessage('‚ö†Ô∏è External: ‡πÄ‡∏´‡∏•‡∏∑‡∏≠‡πÄ‡∏ß‡∏•‡∏≤‡∏à‡∏≠‡∏á‡∏ß‡∏±‡∏ô‡∏û‡∏£‡∏∏‡πà‡∏á‡∏ô‡∏µ‡πâ‡∏≠‡∏µ‡∏Å ' + timeLeft + ' ‡∏ä‡∏±‡πà‡∏ß‡πÇ‡∏°‡∏á', 'warning', 8000);
            }
          }
        }
        
        google.script.run
          .withSuccessHandler(function(availableSlots) {
            startTimeSelect.className = startTimeSelect.className.replace(' loading-select', '');
            startTimeSelect.innerHTML = '';
            
            // ‚≠ê Internal: ‡∏Å‡∏£‡∏≠‡∏á‡πÄ‡∏ß‡∏•‡∏≤‡∏ó‡∏µ‡πà‡πÄ‡∏´‡∏•‡∏∑‡∏≠ ‚â•30 ‡∏ô‡∏≤‡∏ó‡∏µ
            if (selectedInspectionType === 'internal' && selectedDateOnly.getTime() === todayDateOnly.getTime()) {
              var now = new Date();
              var minTime = new Date(now.getTime() + (30 * 60 * 1000)); // +30 ‡∏ô‡∏≤‡∏ó‡∏µ
              
              availableSlots = availableSlots.filter(function(slot) {
                var slotTime = new Date(selectedDate);
                var timeParts = slot.split(':');
                slotTime.setHours(parseInt(timeParts[0]), parseInt(timeParts[1]), 0, 0);
                return slotTime > minTime;
              });
            }
            
            if (!availableSlots || availableSlots.length === 0) {
              startTimeSelect.innerHTML = '<option value="">-- ‡πÑ‡∏°‡πà‡∏°‡∏µ‡πÄ‡∏ß‡∏•‡∏≤‡∏ß‡πà‡∏≤‡∏á --</option>';
              startTimeSelect.disabled = true;
              showMessage('‡πÑ‡∏°‡πà‡∏°‡∏µ‡πÄ‡∏ß‡∏•‡∏≤‡∏ß‡πà‡∏≤‡∏á‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö‡∏ß‡∏±‡∏ô‡∏ó‡∏µ‡πà‡∏ó‡∏µ‡πà‡πÄ‡∏•‡∏∑‡∏≠‡∏Å', 'warning');
            } else {
              startTimeSelect.innerHTML = '<option value="">-- ‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡πÄ‡∏ß‡∏•‡∏≤‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏ï‡πâ‡∏ô --</option>';
              
              availableSlots.forEach(function(slot) {
                var option = document.createElement('option');
                option.value = slot;
                option.textContent = slot + ' ‡∏ô.';
                startTimeSelect.appendChild(option);
              });
              
              startTimeSelect.disabled = false;
            }
          })
          .withFailureHandler(function(error) {
            startTimeSelect.className = startTimeSelect.className.replace(' loading-select', '');
            startTimeSelect.innerHTML = '<option value="">-- ‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î --</option>';
            startTimeSelect.disabled = true;
            showMessage('‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î‡πÉ‡∏ô‡∏Å‡∏≤‡∏£‡πÇ‡∏´‡∏•‡∏î‡πÄ‡∏ß‡∏•‡∏≤‡∏ó‡∏µ‡πà‡∏ß‡πà‡∏≤‡∏á', 'error');
          })
          .getAvailableTimeSlots(date);
      } else {
        startTimeSelect.innerHTML = '<option value="">-- ‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡∏ß‡∏±‡∏ô‡∏ó‡∏µ‡πà‡∏Å‡πà‡∏≠‡∏ô --</option>';
        startTimeSelect.disabled = true;
      }
    }
    
    function updateEndTimeSlots() {
  var date = document.getElementById('requestDate').value;
  var startTime = document.getElementById('startTime').value;
  var endTimeSelect = document.getElementById('endTime');
  
  if (!startTime) {
    resetEndTimeSelect();
    return;
  }
  
  setSelectLoading(endTimeSelect, '‡∏Å‡∏≥‡∏•‡∏±‡∏á‡πÇ‡∏´‡∏•‡∏î‡πÄ‡∏ß‡∏•‡∏≤‡∏™‡∏¥‡πâ‡∏ô‡∏™‡∏∏‡∏î...');
  
  if (date && startTime) {
    // ‚úÖ ‡∏î‡∏∂‡∏á Duration ‡∏à‡∏≤‡∏Å Work Type Dropdown
    var workTypeSelect = document.getElementById('workType');
    var selectedOption = workTypeSelect.options[workTypeSelect.selectedIndex];
    var duration = parseInt(selectedOption.getAttribute('data-duration')) || 60;
    
    var startParts = startTime.split(':');
    var startHour = parseInt(startParts[0]);
    var startMin = parseInt(startParts[1]);
    
    // ‚úÖ ‡∏Ñ‡∏≥‡∏ô‡∏ß‡∏ì End Time ‡∏à‡∏≤‡∏Å Duration
    var totalMinutes = (startHour * 60) + startMin + duration;
    var endHour = Math.floor(totalMinutes / 60);
    var endMin = totalMinutes % 60;
    
    var defaultEndTime = endHour.toString().padStart(2, '0') + ':' + 
                        endMin.toString().padStart(2, '0');
    
    var category = selectedTeamCategory;
    var workType = workTypeSelect.value;
    
    google.script.run
      .withSuccessHandler(function(availableEndTimes) {
        endTimeSelect.className = endTimeSelect.className.replace(' loading-select', '');
        endTimeSelect.innerHTML = '';
        
        if (!availableEndTimes || availableEndTimes.length === 0) {
          endTimeSelect.innerHTML = '<option value="">-- ‡πÑ‡∏°‡πà‡∏°‡∏µ‡πÄ‡∏ß‡∏•‡∏≤‡∏™‡∏¥‡πâ‡∏ô‡∏™‡∏∏‡∏î‡∏ó‡∏µ‡πà‡∏ß‡πà‡∏≤‡∏á --</option>';
          endTimeSelect.disabled = true;
          showMessage('‡πÑ‡∏°‡πà‡∏°‡∏µ‡πÄ‡∏ß‡∏•‡∏≤‡∏™‡∏¥‡πâ‡∏ô‡∏™‡∏∏‡∏î‡∏ó‡∏µ‡πà‡πÄ‡∏´‡∏°‡∏≤‡∏∞‡∏™‡∏°', 'warning');
        } else {
          endTimeSelect.innerHTML = '<option value="">-- ‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡πÄ‡∏ß‡∏•‡∏≤‡∏™‡∏¥‡πâ‡∏ô‡∏™‡∏∏‡∏î --</option>';
          
          availableEndTimes.forEach(function(time) {
            var option = document.createElement('option');
            option.value = time;
            option.textContent = time + ' ‡∏ô.';
            if (time === defaultEndTime) {
              option.selected = true;
            }
            endTimeSelect.appendChild(option);
          });
          
          endTimeSelect.disabled = false;
          
          if (availableEndTimes.includes(defaultEndTime)) {
            showMessage('‚úÖ ‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡πÄ‡∏ß‡∏•‡∏≤‡∏™‡∏¥‡πâ‡∏ô‡∏™‡∏∏‡∏î‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏ï‡πâ‡∏ô: ' + defaultEndTime + ' ‡∏ô. (' + duration + ' ‡∏ô‡∏≤‡∏ó‡∏µ)', 'info', 3000);
          }
        }
      })
      .withFailureHandler(function(error) {
        endTimeSelect.className = endTimeSelect.className.replace(' loading-select', '');
        endTimeSelect.innerHTML = '<option value="">-- ‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î --</option>';
        endTimeSelect.disabled = true;
        showMessage('‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î‡πÉ‡∏ô‡∏Å‡∏≤‡∏£‡πÇ‡∏´‡∏•‡∏î‡πÄ‡∏ß‡∏•‡∏≤‡∏™‡∏¥‡πâ‡∏ô‡∏™‡∏∏‡∏î', 'error');
      })
      .getAvailableEndTimes(date, startTime, category, workType); // ‚úÖ ‡∏™‡πà‡∏á workType
  }
}
    
    function setSelectLoading(selectElement, loadingText) {
      selectElement.innerHTML = '<option value="">' + loadingText + '</option>';
      selectElement.className += ' loading-select';
      selectElement.disabled = true;
    }
    
function resetEndTimeSelect() {
  var endTimeSelect = document.getElementById('endTime');
  endTimeSelect.innerHTML = '<option value="">-- ‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡πÄ‡∏ß‡∏•‡∏≤‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏Å‡πà‡∏≠‡∏ô --</option>';
  endTimeSelect.disabled = true;
  endTimeSelect.value = '';
}
    
    function handleSubmit(event) {
  event.preventDefault();
  setSubmittingFlag();
  
  // ‚≠ê FIX: ‡πÄ‡∏ä‡πá‡∏Ñ‡∏à‡∏≤‡∏Å hidden input ‡∏î‡πâ‡∏ß‡∏¢
  var inspectionTypeInput = document.getElementById('inspectionType').value;
  
  if (!inspectionTypeInput && !selectedInspectionType) {
    showMessage('‚ùå ‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡∏õ‡∏£‡∏∞‡πÄ‡∏†‡∏ó‡∏Å‡∏≤‡∏£‡∏ï‡∏£‡∏ß‡∏à (Internal ‡∏´‡∏£‡∏∑‡∏≠ External) ‡∏Å‡πà‡∏≠‡∏ô', 'error');
    // ‚≠ê ‡πÄ‡∏û‡∏¥‡πà‡∏°: scroll ‡∏Ç‡∏∂‡πâ‡∏ô‡πÑ‡∏õ‡∏ó‡∏µ‡πà‡∏õ‡∏∏‡πà‡∏°
    window.scrollTo({ top: 0, behavior: 'smooth' });
    return;
  }
  
  // ‚≠ê FIX: ‡πÉ‡∏ä‡πâ‡∏Ñ‡πà‡∏≤‡∏à‡∏≤‡∏Å input ‡∏´‡∏£‡∏∑‡∏≠ variable
  var finalInspectionType = inspectionTypeInput || selectedInspectionType;
  
  if (!selectedTeamCategory) {
    showMessage('‚ùå ‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡∏ó‡∏µ‡∏°‡∏á‡∏≤‡∏ô‡∏Å‡πà‡∏≠‡∏ô', 'error');
    return;
  }
  
  var email = document.getElementById('requesterEmail').value;
  if (!email || email === '‡∏Å‡∏≥‡∏•‡∏±‡∏á‡πÇ‡∏´‡∏•‡∏î...') {
    showMessage('‚ö†Ô∏è ‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏£‡∏≠‡∏à‡∏ô‡∏Å‡∏ß‡πà‡∏≤‡∏£‡∏∞‡∏ö‡∏ö‡∏à‡∏∞‡πÇ‡∏´‡∏•‡∏î‡∏≠‡∏µ‡πÄ‡∏°‡∏•‡πÄ‡∏™‡∏£‡πá‡∏à', 'warning');
    return;
  }
  
  var submitBtn = document.getElementById('submitBtn');
  var loading = document.querySelector('.loading');
  
  var formData = {
    inspectionType: finalInspectionType,
    teamCategory: selectedTeamCategory,
    requestDate: document.getElementById('requestDate').value,
    workType: document.getElementById('workType').value,
    startTime: document.getElementById('startTime').value,
    endTime: document.getElementById('endTime').value,
    description: document.getElementById('description').value.trim(),
    location: document.getElementById('location').value.trim(),
    requesterName: document.getElementById('requesterName').value.trim(),
    requesterEmail: email
  };
  
  // ‚≠ê ‡πÄ‡∏û‡∏¥‡πà‡∏°: ‡πÄ‡∏ä‡πá‡∏Ñ‡∏ß‡πà‡∏≤‡∏°‡∏µ‡πÑ‡∏ü‡∏•‡πå‡∏´‡∏£‡∏∑‡∏≠‡πÑ‡∏°‡πà
  var fileInput = document.getElementById('locationLayoutFile');
  var file = fileInput.files[0];
  
  if (!file) {
    showMessage('‚ùå ‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡πÅ‡∏ô‡∏ö‡πÑ‡∏ü‡∏•‡πå Location Layout', 'error');
    return;
  }
  
  // ‚≠ê FIX: ‡πÄ‡∏ä‡πá‡∏Ñ‡∏≠‡∏µ‡∏Å‡∏Ñ‡∏£‡∏±‡πâ‡∏á‡∏ß‡πà‡∏≤‡∏°‡∏µ inspectionType ‡∏´‡∏£‡∏∑‡∏≠‡πÑ‡∏°‡πà
  var requiredFields = ['inspectionType', 'teamCategory', 'requestDate', 'workType', 'startTime', 'endTime', 'description', 'location', 'requesterName', 'requesterEmail'];
  var missingFields = requiredFields.filter(function(field) {
    return !formData[field];
  });
  
  if (missingFields.length > 0) {
    var missingFieldNames = missingFields.map(function(field) {
      var labels = {
        inspectionType: '‡∏õ‡∏£‡∏∞‡πÄ‡∏†‡∏ó‡∏Å‡∏≤‡∏£‡∏ï‡∏£‡∏ß‡∏à',
        teamCategory: '‡∏ó‡∏µ‡∏°‡∏á‡∏≤‡∏ô',
        requestDate: '‡∏ß‡∏±‡∏ô‡∏ó‡∏µ‡πà',
        workType: '‡∏õ‡∏£‡∏∞‡πÄ‡∏†‡∏ó‡∏á‡∏≤‡∏ô',
        startTime: '‡πÄ‡∏ß‡∏•‡∏≤‡πÄ‡∏£‡∏¥‡πà‡∏°',
        endTime: '‡πÄ‡∏ß‡∏•‡∏≤‡∏™‡∏¥‡πâ‡∏ô‡∏™‡∏∏‡∏î',
        description: '‡∏£‡∏≤‡∏¢‡∏•‡∏∞‡πÄ‡∏≠‡∏µ‡∏¢‡∏î',
        location: '‡∏™‡∏ñ‡∏≤‡∏ô‡∏ó‡∏µ‡πà',
        requesterName: '‡∏ä‡∏∑‡πà‡∏≠‡∏ú‡∏π‡πâ‡∏Ç‡∏≠',
        requesterEmail: '‡∏≠‡∏µ‡πÄ‡∏°‡∏•'
      };
      return labels[field] || field;
    });
    
    showMessage('‚ùå ‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏Å‡∏£‡∏≠‡∏Å‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡πÉ‡∏´‡πâ‡∏Ñ‡∏£‡∏ö‡∏ñ‡πâ‡∏ß‡∏ô:\n‚Ä¢ ' + missingFieldNames.join('\n‚Ä¢ '), 'error');
    return;
  }
  
  // ‚≠ê ‡πÅ‡∏™‡∏î‡∏á Confirmation Dialog
  var confirmMsg = '‚úÖ ‡∏¢‡∏∑‡∏ô‡∏¢‡∏±‡∏ô‡∏Å‡∏≤‡∏£‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å RFI Request?\n\n';
  confirmMsg += 'üìã ‡∏õ‡∏£‡∏∞‡πÄ‡∏†‡∏ó: ' + (finalInspectionType === 'internal' ? 'Internal Inspection' : 'External Inspection') + '\n';
  confirmMsg += 'üè∑Ô∏è ‡∏á‡∏≤‡∏ô: ' + formData.workType + '\n';
  confirmMsg += 'üë• ‡∏ó‡∏µ‡∏°: ' + formData.teamCategory + '\n';
  confirmMsg += 'üìÖ ‡∏ß‡∏±‡∏ô‡∏ó‡∏µ‡πà: ' + formData.requestDate + '\n';
  confirmMsg += '‚è∞ ‡πÄ‡∏ß‡∏•‡∏≤: ' + formData.startTime + ' - ' + formData.endTime;
  
  if (!confirm(confirmMsg)) {
    showMessage('‡∏¢‡∏Å‡πÄ‡∏•‡∏¥‡∏Å‡∏Å‡∏≤‡∏£‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å', 'info', 2000);
    return;
  }
  
  submitBtn.disabled = true;
  loading.style.display = 'block';
  
  // ‚≠ê ‡πÅ‡∏õ‡∏•‡∏á‡πÑ‡∏ü‡∏•‡πå‡πÄ‡∏õ‡πá‡∏ô Base64
  var reader = new FileReader();
  
reader.onload = function(e) {
    var base64Content = e.target.result.split(',')[1];
    
    formData.locationLayoutFile = {
      name: file.name,
      mimeType: file.type,
      content: base64Content
    };
    
    console.log('üì§ Submitting with file:', file.name, '(' + formatFileSize(file.size) + ')');
    
    // ‚≠ê ‡πÄ‡∏£‡∏¥‡πà‡∏° Progress Bar
    var isInternal = finalInspectionType === 'internal';
    var totalSteps = isInternal ? 6 : 5;
    
    showToast('‡∏Å‡∏≥‡∏•‡∏±‡∏á‡∏õ‡∏£‡∏∞‡∏°‡∏ß‡∏•‡∏ú‡∏•', '‡∏Å‡∏≥‡∏•‡∏±‡∏á‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å RFI Request...', 'info', 3000);
    updateSubmitProgress(1, totalSteps, '‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•');
    
    google.script.run
      .withSuccessHandler(function(result) {
        loading.style.display = 'none';
        submitBtn.disabled = false;
        
        console.log('üì• Response:', result);
        
        if (result && result.success) {
          // ‚≠ê ‡πÅ‡∏™‡∏î‡∏á Progress ‡∏ï‡∏≤‡∏°‡∏Ç‡∏±‡πâ‡∏ô‡∏ï‡∏≠‡∏ô‡∏ó‡∏µ‡πà Backend ‡∏ó‡∏≥‡πÄ‡∏™‡∏£‡πá‡∏à
          if (result.progress) {
            result.progress.forEach(function(step, index) {
              setTimeout(function() {
                updateSubmitProgress(index + 1, totalSteps, step);
              }, index * 300);
            });
          }
          
          setTimeout(function() {
            updateSubmitProgress(totalSteps, totalSteps, '‚úÖ ‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à');
            
            setTimeout(function() {
              resetSubmitProgress();
            }, 2000);
            
            var successMsg = result.message || '‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à';
            var toastMsg = '';
            
            if (result.fileUrl) {
              toastMsg = '‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡πÅ‡∏•‡∏∞‡πÑ‡∏ü‡∏•‡πå‡πÄ‡∏£‡∏µ‡∏¢‡∏ö‡∏£‡πâ‡∏≠‡∏¢';
            }
            
            showToast('‚úÖ ‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à!', toastMsg, 'success', 8000);
            showMessage('‚úÖ ' + successMsg, 'success', 10000);
            resetFormChangeFlag();
            
            resetForm();
          }, result.progress ? result.progress.length * 300 : 0);
          
        } else {
          resetSubmitProgress();
          var errorMessage = result && result.message ? result.message : '‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î‡∏ó‡∏µ‡πà‡πÑ‡∏°‡πà‡∏ó‡∏£‡∏≤‡∏ö‡∏™‡∏≤‡πÄ‡∏´‡∏ï‡∏∏';
          showToast('‚ùå ‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î', errorMessage, 'error', 8000);
          showMessage('‚ùå ' + errorMessage, 'error');
        }
      })
      .withFailureHandler(function(error) {
        loading.style.display = 'none';
        submitBtn.disabled = false;
        resetSubmitProgress();
        isSubmitting = false;
        
        console.error('‚ùå Error:', error);
        
        var errorMessage = error.message || error.toString();
        showToast('‚ùå ‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î', errorMessage, 'error', 8000);
        showMessage('‚ùå ‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î‡πÉ‡∏ô‡∏Å‡∏≤‡∏£‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å:\n' + errorMessage, 'error');
      })
      .saveRFIRequirement(formData);
  };
  
  reader.onerror = function(error) {
    loading.style.display = 'none';
    submitBtn.disabled = false;
    showMessage('‚ùå ‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡∏≠‡πà‡∏≤‡∏ô‡πÑ‡∏ü‡∏•‡πå‡πÑ‡∏î‡πâ: ' + error.toString(), 'error');
  };
  
  // ‚≠ê ‡∏≠‡πà‡∏≤‡∏ô‡πÑ‡∏ü‡∏•‡πå‡πÄ‡∏õ‡πá‡∏ô Base64
  reader.readAsDataURL(file);
}
    
function resetForm() {
  document.getElementById('rfiForm').reset();
  
  // ‚≠ê Reset Inspection Type
  var inspectionButtons = document.querySelectorAll('.inspection-btn');
  inspectionButtons.forEach(function(btn) {
    btn.classList.remove('active');
  });
  
  document.getElementById('infoBoxExternal').classList.remove('show');
  document.getElementById('infoBoxInternal').classList.remove('show');
  
  // ‚≠ê Reset variables
  selectedInspectionType = null;
  document.getElementById('inspectionType').value = '';
  
  // Reset Team
  var teamButtons = document.querySelectorAll('.team-btn');
  teamButtons.forEach(function(btn) {
    btn.classList.remove('active');
  });
  
  document.getElementById('multiSelectContainer').classList.remove('show');
  clearAllCheckboxes();
  
  selectedTeamCategory = null;
  isMultiWork = false;
  hideRecommendation();
  
  // Reset Time Slots
  document.getElementById('startTime').innerHTML = '<option value="">-- ‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡∏ß‡∏±‡∏ô‡∏ó‡∏µ‡πà‡∏Å‡πà‡∏≠‡∏ô --</option>';
  document.getElementById('startTime').disabled = true;
  resetEndTimeSelect();
  
  // ‚≠ê UPDATED: Reset Location Layout File (‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏Å‡∏≤‡∏£‡∏ã‡πà‡∏≠‡∏ô‡∏õ‡∏∏‡πà‡∏°‡∏•‡∏ö)
  var fileInput = document.getElementById('locationLayoutFile');
  var fileInfo = document.getElementById('fileInfo');
  var clearBtn = document.getElementById('clearFileBtn');
  
  fileInput.value = '';
  fileInfo.style.display = 'none';
  if (clearBtn) clearBtn.style.display = 'none';
  
  console.log('‚úÖ Form reset - including file upload');
  
  // Reload Data
  loadWorkTypes();
  loadUserEmailAndName();
  setMinDate();
  resetFormChangeFlag();
  
  showMessage('‚úÖ ‡∏£‡∏µ‡πÄ‡∏ã‡πá‡∏ï‡∏ü‡∏≠‡∏£‡πå‡∏°‡πÄ‡∏£‡∏µ‡∏¢‡∏ö‡∏£‡πâ‡∏≠‡∏¢‡πÅ‡∏•‡πâ‡∏ß - ‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡∏õ‡∏£‡∏∞‡πÄ‡∏†‡∏ó‡∏Å‡∏≤‡∏£‡∏ï‡∏£‡∏ß‡∏à‡πÉ‡∏´‡∏°‡πà', 'info', 3000);
}

function setupHolidayCheck() {
  var dateInput = document.getElementById('requestDate');
  
  dateInput.addEventListener('change', function() {
    var selectedDate = this.value;
    var inspectionType = document.getElementById('inspectionType').value;
    
    if (selectedDate && inspectionType) {
      checkHolidayRestrictions(selectedDate, inspectionType);
    }
  });
}

/**
 * ‚≠ê ‡πÄ‡∏ä‡πá‡∏Ñ‡∏Ç‡πâ‡∏≠‡∏à‡∏≥‡∏Å‡∏±‡∏î‡∏ß‡∏±‡∏ô‡∏´‡∏¢‡∏∏‡∏î
 */
function checkHolidayRestrictions(dateStr, inspectionType) {
  if (!dateStr || !inspectionType) return;
  
  console.log('üîç Checking holiday restrictions:', dateStr);
  
  // ‡πÅ‡∏™‡∏î‡∏á loading
  showToast('‡∏Å‡∏≥‡∏•‡∏±‡∏á‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö', '‡∏Å‡∏≥‡∏•‡∏±‡∏á‡πÄ‡∏ä‡πá‡∏Ñ‡∏ß‡∏±‡∏ô‡∏´‡∏¢‡∏∏‡∏î...', 'info', 2000);
  
  google.script.run
    .withSuccessHandler(function(result) {
      console.log('üì• Holiday check result:', result);
      
      if (!result.allowed) {
        // ‚ùå ‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡∏à‡∏≠‡∏á‡πÑ‡∏î‡πâ
        console.log('‚ùå Cannot book:', result.reason);
        
        // ‡πÅ‡∏™‡∏î‡∏á Toast ‡πÅ‡∏à‡πâ‡∏á‡πÄ‡∏ï‡∏∑‡∏≠‡∏ô
        showToast(
          result.title || '‚ùå ‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡∏à‡∏≠‡∏á‡∏ß‡∏±‡∏ô‡∏ô‡∏µ‡πâ‡πÑ‡∏î‡πâ',
          result.message,
          'error',
          12000
        );
        
        // ‡πÅ‡∏™‡∏î‡∏á Message Box
        showMessage(result.message, 'error', 12000);
        
        // ‡∏•‡πâ‡∏≤‡∏á‡∏Ñ‡πà‡∏≤‡∏ß‡∏±‡∏ô‡∏ó‡∏µ‡πà
        document.getElementById('requestDate').value = '';
        
        // Reset Time Slots
        document.getElementById('startTime').innerHTML = '<option value="">-- ‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡∏ß‡∏±‡∏ô‡∏ó‡∏µ‡πà‡∏Å‡πà‡∏≠‡∏ô --</option>';
        document.getElementById('startTime').disabled = true;
        resetEndTimeSelect();
        
      } else if (result.warning) {
        // ‚ö†Ô∏è ‡∏°‡∏µ‡∏Ñ‡∏≥‡πÄ‡∏ï‡∏∑‡∏≠‡∏ô (‡πÅ‡∏ï‡πà‡∏à‡∏≠‡∏á‡πÑ‡∏î‡πâ)
        console.log('‚ö†Ô∏è Warning:', result.message);
        
        showToast(
          result.title || '‚ö†Ô∏è ‡∏Ñ‡∏≥‡πÄ‡∏ï‡∏∑‡∏≠‡∏ô',
          result.message,
          'warning',
          10000
        );
        
      } else {
        // ‚úÖ ‡∏à‡∏≠‡∏á‡πÑ‡∏î‡πâ‡∏õ‡∏Å‡∏ï‡∏¥
        console.log('‚úÖ Date is available for booking');
      }
    })
    .withFailureHandler(function(error) {
      console.error('‚ùå Error checking holiday:', error);
      showToast(
        '‚ö†Ô∏è ‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î',
        '‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡∏ß‡∏±‡∏ô‡∏´‡∏¢‡∏∏‡∏î‡πÑ‡∏î‡πâ: ' + error.message,
        'error',
        5000
      );
    })
    .checkDateBookingAllowed(dateStr, inspectionType);
}

// ‚≠ê ‡πÄ‡∏£‡∏µ‡∏¢‡∏Å‡πÉ‡∏ä‡πâ‡πÉ‡∏ô window.onload
var originalOnLoad = window.onload;
window.onload = function() {
  if (originalOnLoad) originalOnLoad();
  setupHolidayCheck(); // ‚≠ê ‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏ö‡∏£‡∏£‡∏ó‡∏±‡∏î‡∏ô‡∏µ‡πâ
};

// ‚≠ê ‡πÅ‡∏Å‡πâ‡πÑ‡∏Ç‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô updateAvailableSlots ‡πÉ‡∏´‡πâ‡πÄ‡∏ä‡πá‡∏Ñ‡∏ß‡∏±‡∏ô‡∏´‡∏¢‡∏∏‡∏î‡∏Å‡πà‡∏≠‡∏ô
var originalUpdateAvailableSlots = updateAvailableSlots;

updateAvailableSlots = function() {
  var date = document.getElementById('requestDate').value;
  var inspectionType = document.getElementById('inspectionType').value;
  
  if (!date || !inspectionType) {
    originalUpdateAvailableSlots();
    return;
  }
  
  // ‡πÄ‡∏ä‡πá‡∏Ñ‡∏ß‡∏±‡∏ô‡∏´‡∏¢‡∏∏‡∏î‡∏Å‡πà‡∏≠‡∏ô load time slots
  google.script.run
    .withSuccessHandler(function(result) {
      if (result.allowed) {
        // ‡∏ñ‡πâ‡∏≤‡∏à‡∏≠‡∏á‡πÑ‡∏î‡πâ ‡πÉ‡∏´‡πâ load time slots
        originalUpdateAvailableSlots();
      } else {
        // ‡∏ñ‡πâ‡∏≤‡∏à‡∏≠‡∏á‡πÑ‡∏°‡πà‡πÑ‡∏î‡πâ ‡∏à‡∏∞‡∏ñ‡∏π‡∏Å‡∏à‡∏±‡∏î‡∏Å‡∏≤‡∏£‡πÉ‡∏ô checkHolidayRestrictions ‡πÅ‡∏•‡πâ‡∏ß
        console.log('‚ùå Date not allowed, slots not loaded');
      }
    })
    .withFailureHandler(function(error) {
      console.error('Error:', error);
      originalUpdateAvailableSlots();
    })
    .checkDateBookingAllowed(date, inspectionType);
}

/**
 * ‚≠ê ‡πÄ‡∏ä‡πá‡∏Ñ‡∏ß‡∏±‡∏ô‡∏´‡∏¢‡∏∏‡∏î‡∏≠‡∏±‡∏ï‡πÇ‡∏ô‡∏°‡∏±‡∏ï‡∏¥‡πÄ‡∏°‡∏∑‡πà‡∏≠‡πÇ‡∏´‡∏•‡∏î‡∏´‡∏ô‡πâ‡∏≤‡πÄ‡∏ß‡πá‡∏ö
 */
function checkTodayHolidayStatus() {
  console.log('üîç Checking today holiday status...');
  
  google.script.run
    .withSuccessHandler(function(holidays) {
      if (!holidays || holidays.length === 0) {
        console.log('‚úÖ No holidays data');
        return;
      }
      
      var now = new Date();
      var today = new Date(now.getFullYear(), now.getMonth(), now.getDate());
      var currentHour = now.getHours();
      
      // üîç ‡∏´‡∏≤‡∏ß‡∏±‡∏ô‡∏´‡∏¢‡∏∏‡∏î‡∏û‡∏£‡∏∏‡πà‡∏á‡∏ô‡∏µ‡πâ
      var tomorrow = new Date(today);
      tomorrow.setDate(tomorrow.getDate() + 1);
      var tomorrowStr = formatDateYYYYMMDD(tomorrow);
      
      var tomorrowHoliday = null;
      var consecutiveDays = 0;
      
      holidays.forEach(function(holiday) {
        if (holiday.date === tomorrowStr) {
          tomorrowHoliday = holiday;
        }
      });
      
      // üìä ‡∏ô‡∏±‡∏ö‡∏ß‡∏±‡∏ô‡∏´‡∏¢‡∏∏‡∏î‡∏ï‡∏¥‡∏î‡∏ï‡πà‡∏≠‡∏Å‡∏±‡∏ô
      if (tomorrowHoliday) {
        var checkDate = new Date(tomorrow);
        
        while (true) {
          var checkDateStr = formatDateYYYYMMDD(checkDate);
          var isHoliday = holidays.some(function(h) {
            return h.date === checkDateStr;
          });
          
          if (isHoliday) {
            consecutiveDays++;
            checkDate.setDate(checkDate.getDate() + 1);
          } else {
            break;
          }
        }
      }
      
      // üîç ‡∏´‡∏≤‡∏ß‡∏±‡∏ô‡∏´‡∏¢‡∏∏‡∏î‡∏ß‡∏±‡∏ô‡∏ô‡∏µ‡πâ
      var todayStr = formatDateYYYYMMDD(today);
      var todayHoliday = null;
      
      holidays.forEach(function(holiday) {
        if (holiday.date === todayStr) {
          todayHoliday = holiday;
        }
      });
      
      // ========================================
      // ‚≠ê ‡∏Å‡∏£‡∏ì‡∏µ‡∏ó‡∏µ‡πà 1: ‡∏ß‡∏±‡∏ô‡∏ô‡∏µ‡πâ‡πÄ‡∏õ‡πá‡∏ô‡∏ß‡∏±‡∏ô‡∏´‡∏¢‡∏∏‡∏î
      // ========================================
      if (todayHoliday) {
        var holidayMsg = '';
        var holidayType = 'info';
        
        if (currentHour < 13) {
          holidayMsg = 'üéâ ‡∏ß‡∏±‡∏ô‡∏ô‡∏µ‡πâ‡πÄ‡∏õ‡πá‡∏ô‡∏ß‡∏±‡∏ô‡∏´‡∏¢‡∏∏‡∏î (' + todayHoliday.name + ')\n\n' +
                      'üìã External: ‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡∏à‡∏≠‡∏á‡πÑ‡∏î‡πâ‡πÉ‡∏ô‡∏ä‡πà‡∏ß‡∏á 00:00-13:00 ‡∏ô.\n' +
                      'üè¢ Internal: ‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡∏à‡∏≠‡∏á‡πÑ‡∏î‡πâ‡∏ï‡∏•‡∏≠‡∏î‡∏ó‡∏±‡πâ‡∏á‡∏ß‡∏±‡∏ô\n\n' +
                      'üí° ‡∏£‡∏≠‡∏à‡∏ô‡∏ñ‡∏∂‡∏á 13:00 ‡∏ô. ‡πÄ‡∏û‡∏∑‡πà‡∏≠‡∏à‡∏≠‡∏á‡∏ß‡∏±‡∏ô‡∏ó‡∏≥‡∏Å‡∏≤‡∏£‡∏ñ‡∏±‡∏î‡πÑ‡∏õ';
          holidayType = 'warning';
        } else {
          holidayMsg = 'üéâ ‡∏ß‡∏±‡∏ô‡∏ô‡∏µ‡πâ‡πÄ‡∏õ‡πá‡∏ô‡∏ß‡∏±‡∏ô‡∏´‡∏¢‡∏∏‡∏î (' + todayHoliday.name + ')\n\n' +
                      'üìã External: ‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡∏à‡∏≠‡∏á‡∏ß‡∏±‡∏ô‡∏ó‡∏≥‡∏Å‡∏≤‡∏£‡∏ñ‡∏±‡∏î‡πÑ‡∏õ‡πÑ‡∏î‡πâ‡πÅ‡∏•‡πâ‡∏ß\n' +
                      'üè¢ Internal: ‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡∏à‡∏≠‡∏á‡πÑ‡∏î‡πâ';
          holidayType = 'info';
        }
        
        showToast(
          'üéâ ‡∏ß‡∏±‡∏ô‡∏ô‡∏µ‡πâ‡πÄ‡∏õ‡πá‡∏ô‡∏ß‡∏±‡∏ô‡∏´‡∏¢‡∏∏‡∏î',
          holidayMsg,
          holidayType,
          15000
        );
        
        return;
      }
      
      // ========================================
      // ‚≠ê ‡∏Å‡∏£‡∏ì‡∏µ‡∏ó‡∏µ‡πà 2: ‡∏û‡∏£‡∏∏‡πà‡∏á‡∏ô‡∏µ‡πâ‡πÄ‡∏õ‡πá‡∏ô‡∏ß‡∏±‡∏ô‡∏´‡∏¢‡∏∏‡∏î (‡∏ß‡∏±‡∏ô‡∏Å‡πà‡∏≠‡∏ô‡∏´‡∏¢‡∏∏‡∏î)
      // ========================================
      if (tomorrowHoliday) {
        var warningMsg = '';
        var warningType = 'warning';
        var warningTitle = '‚ö†Ô∏è ‡∏û‡∏£‡∏∏‡πà‡∏á‡∏ô‡∏µ‡πâ‡πÄ‡∏õ‡πá‡∏ô‡∏ß‡∏±‡∏ô‡∏´‡∏¢‡∏∏‡∏î!';
        
        // üè¢ Internal: ‡∏à‡∏≠‡∏á‡∏ß‡∏±‡∏ô‡∏´‡∏¢‡∏∏‡∏î‡πÑ‡∏î‡πâ ‡πÅ‡∏ï‡πà‡∏ï‡πâ‡∏≠‡∏á‡∏à‡∏≠‡∏á‡∏Å‡πà‡∏≠‡∏ô 13:00 ‡∏ô.
        if (currentHour < 13) {
          warningMsg = 'üìÖ ‡∏û‡∏£‡∏∏‡πà‡∏á‡∏ô‡∏µ‡πâ: ' + tomorrowHoliday.name;
          
          if (consecutiveDays > 1) {
            warningMsg += ' (‡∏´‡∏¢‡∏∏‡∏î‡∏ï‡∏¥‡∏î‡∏ï‡πà‡∏≠‡∏Å‡∏±‡∏ô ' + consecutiveDays + ' ‡∏ß‡∏±‡∏ô)';
          }
          
          warningMsg += '\n\n' +
                       'üè¢ Internal Inspection:\n' +
                       '‚úÖ ‡∏¢‡∏±‡∏á‡∏à‡∏≠‡∏á‡∏ß‡∏±‡∏ô‡∏´‡∏¢‡∏∏‡∏î‡πÑ‡∏î‡πâ! ‡πÅ‡∏ï‡πà‡∏ï‡πâ‡∏≠‡∏á‡∏à‡∏≠‡∏á‡∏Å‡πà‡∏≠‡∏ô 13:00 ‡∏ô.\n' +
                       '‚è≥ ‡πÄ‡∏´‡∏•‡∏∑‡∏≠‡πÄ‡∏ß‡∏•‡∏≤‡∏≠‡∏µ‡∏Å ' + (13 - currentHour) + ' ‡∏ä‡∏±‡πà‡∏ß‡πÇ‡∏°‡∏á ' + (60 - now.getMinutes()) + ' ‡∏ô‡∏≤‡∏ó‡∏µ\n\n' +
                       'üìã External Inspection:\n' +
                       '‚ö†Ô∏è ‡∏´‡πâ‡∏≤‡∏°‡∏à‡∏≠‡∏á‡∏ß‡∏±‡∏ô‡∏´‡∏¢‡∏∏‡∏î ‡πÅ‡∏•‡∏∞‡∏ï‡πâ‡∏≠‡∏á‡∏à‡∏≠‡∏á‡∏Å‡πà‡∏≠‡∏ô 13:00 ‡∏ô.';
          
          warningType = 'warning';
          warningTitle = '‚è∞ ‡∏û‡∏£‡∏∏‡πà‡∏á‡∏ô‡∏µ‡πâ‡πÄ‡∏õ‡πá‡∏ô‡∏ß‡∏±‡∏ô‡∏´‡∏¢‡∏∏‡∏î - ‡∏£‡∏µ‡∏ö‡∏à‡∏≠‡∏á!';
          
        } else {
          // ‡∏´‡∏•‡∏±‡∏á 13:00 ‡∏ô. ‡πÅ‡∏•‡πâ‡∏ß
          warningMsg = 'üìÖ ‡∏û‡∏£‡∏∏‡πà‡∏á‡∏ô‡∏µ‡πâ: ' + tomorrowHoliday.name;
          
          if (consecutiveDays > 1) {
            warningMsg += ' (‡∏´‡∏¢‡∏∏‡∏î‡∏ï‡∏¥‡∏î‡∏ï‡πà‡∏≠‡∏Å‡∏±‡∏ô ' + consecutiveDays + ' ‡∏ß‡∏±‡∏ô)';
          }
          
          warningMsg += '\n\n' +
                       '‚ùå ‡πÄ‡∏•‡∏¢‡πÄ‡∏ß‡∏•‡∏≤‡∏à‡∏≠‡∏á‡πÅ‡∏•‡πâ‡∏ß (‡∏ï‡πâ‡∏≠‡∏á‡∏à‡∏≠‡∏á‡∏Å‡πà‡∏≠‡∏ô 13:00 ‡∏ô.)\n\n' +
                       'üè¢ Internal: ‡∏´‡πâ‡∏≤‡∏°‡∏à‡∏≠‡∏á‡∏ß‡∏±‡∏ô‡∏´‡∏¢‡∏∏‡∏î\n' +
                       'üìã External: ‡∏´‡πâ‡∏≤‡∏°‡∏à‡∏≠‡∏á‡∏à‡∏ô‡∏ñ‡∏∂‡∏á‡∏ß‡∏±‡∏ô‡∏ó‡∏≥‡∏Å‡∏≤‡∏£‡∏ñ‡∏±‡∏î‡πÑ‡∏õ';
          
          warningType = 'error';
          warningTitle = '‚ùå ‡πÄ‡∏•‡∏¢‡πÄ‡∏ß‡∏•‡∏≤‡∏à‡∏≠‡∏á‡∏ß‡∏±‡∏ô‡∏´‡∏¢‡∏∏‡∏î‡πÅ‡∏•‡πâ‡∏ß';
        }
        
        showToast(
          warningTitle,
          warningMsg,
          warningType,
          20000 // ‡πÅ‡∏™‡∏î‡∏á 20 ‡∏ß‡∏¥‡∏ô‡∏≤‡∏ó‡∏µ
        );
        
        // üîî ‡πÅ‡∏™‡∏î‡∏á Banner Warning ‡∏î‡πâ‡∏≤‡∏ô‡∏ö‡∏ô‡∏î‡πâ‡∏ß‡∏¢ (‡∏ñ‡πâ‡∏≤‡∏ï‡πâ‡∏≠‡∏á‡∏Å‡∏≤‡∏£)
        showHolidayBanner(tomorrowHoliday, currentHour, consecutiveDays);
      }
      
    })
    .withFailureHandler(function(error) {
      console.error('‚ùå Error checking holiday status:', error);
    })
    .getHolidayList();
}
/**
 * ‚≠ê Helper: ‡πÅ‡∏õ‡∏•‡∏á Date ‡πÄ‡∏õ‡πá‡∏ô YYYY-MM-DD
 */
function formatDateYYYYMMDD(date) {
  var year = date.getFullYear();
  var month = String(date.getMonth() + 1).padStart(2, '0');
  var day = String(date.getDate()).padStart(2, '0');
  return year + '-' + month + '-' + day;
}



  </script>
</body>
</html>
